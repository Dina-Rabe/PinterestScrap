{
    "manifest_version": 2,
    "name": "Image URL Printer",
    "version": "1.0",
    "description": "Prints the URLs of images on Pinterest - France",
    "permissions": ["tabs", "activeTab"],
    "content_scripts": [
      {
        "matches": ["*://*.pinterest.fr/*"],
        "js": ["main.js"]
      }
    ],
    "browser_action": {
      "default_icon": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      },
      "default_title": "Print URL",
      "default_popup": "popup.html"
    }
  }